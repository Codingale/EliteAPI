{
  "executable": "EliteAPI",
  "splashscreen": {
    "imageFile": "wwwroot/img/eliteapi.svg"
  },
  "name": "EliteAPI",
  "author": "Somfic",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.EliteAPI.app",
    "productName": "EliteAPI",
    "copyright": "Copyright Â© 2021",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}